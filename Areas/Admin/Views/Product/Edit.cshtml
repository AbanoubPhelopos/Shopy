@model ProductVM
@{
Layout = "_DashBoard";
}
<div class="container mt-4">
    <div class="row">
        <!-- Product Info Card -->
        <div class="col-lg-8 col-md-12 mb-4">
            <div class="card shadow border-0">
                <div class="card-header bg-dark py-3">
                    <div class="row">
                        <div class="text-center col-12">
                            <h1 class="text-white">Update Product</h1>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" class="container mt-5" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Product.Id" />
                        <input type="hidden" asp-for="Product.Img" />
                        <div asp-validation-summary="All"></div>

                        <div class="form-group row">
                            <label asp-for="Product.Name" class="col-sm-2 col-form-label mb-3">Name</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Product.Name" class="form-control mb-3">
                                <span asp-validation-for="Product.Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Product.Description" class="col-sm-2 col-form-label mb-3">Description</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Product.Description" class="form-control mb-3">
                                <span asp-validation-for="Product.Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Product.Price" class="col-sm-2 col-form-label mb-3">Price</label>
                            <div class="col-sm-10">
                                <input type="number" asp-for="Product.Price" class="form-control mb-3">
                                <span asp-validation-for="Product.Price" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Product.CategoryId" class="form-label mt-4">Category</label>
                            <select class="form-select" asp-for="Product.CategoryId" asp-items="Model.CategoryList">
                                <option disabled selected>-- Select Category --</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="Product.Img" class="form-label mt-4">Product Image</label>
                            <input type="file" name="file" class="form-control">
                            <small class="form-text text-muted">Only .jpg, .png, .jpeg are allowed with a max size of 1MB.</small>
                            <span asp-validation-for="Product.Img" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-outline-success btn-lg mr-2 mt-4">
                                    <i class="bi bi-plus-circle"></i>
                                    Save
                                </button>

                                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary btn-lg mt-4">Back to Products</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Product Image -->
        <div class="col-lg-4 col-md-12 d-flex justify-content-center align-items-center">
            <img id="ImagePreview" src="~/@Model.Product.Img" class="img-fluid rounded shadow" alt="Product Image" />
        </div>
    </div>
</div>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />
}